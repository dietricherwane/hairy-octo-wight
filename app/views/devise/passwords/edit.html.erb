<div class="page-header">
    <div class="icon">
        <span class="ico-arrow-right"></span>
    </div>
    <h1>Nouveau mot de passe<small>Veuillez saisir et confirmer votre nouveau mot de passe</small></h1>
</div>

<div class = "row-fluid">
  <%= render 'layouts/flash_messages' %>
  <% if @error %>  
  <div class = "span12">
    <div class = "alert alert-error">         
      <ul>
      <% @error_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
  <% end %>
  <% if @success %> 
  <div class = "span12"> 
    <div class = "alert alert-success">         
      <% @success_messages.each do |msg| %>
        <%= msg %>
      <% end %>
    </div
  </div>
  <% end %>
     
<!------------------------------------------ Row-fluid ----------------------------------->		
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>      
    <%#= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>
    <div class = "row-form">
      <div class = "span12">
        <div class = "input-append">		        
	        <%= f.password_field :password, :autofocus => true, :placeholder => "Mot de passe" %>
	        <span class="add-on blue">
	          <i class = "icon-user icon-white"></i>
	        </span>
        </div>
      </div>
    </div>
    <div class = "row-form">
      <div class = "span12">
        <div class = "input-append">
	        <%= f.password_field :password_confirmation, :placeholder => "Confirmer le mot de passe" %>
	        <span class="add-on blue">
	          <i class = "icon-lock icon-white"></i>
	        </span>
        </div>
      </div>
    </div>        	      
    <div class = "row-form">
      <div class="span12">
        <%= button_tag(:name => "Changer de mot de passe", :data => {:disable_with => "Veuillez patienter"}, :class => "btn") do %>
          Changer de mot de passe <div class="icon-arrow-next icon-white"></div> 
        <% end %>
      </div>
    </div>
  <% end %>		
<!------------------------------------------ Row-fluid ----------------------------------->
</div>	  
<%= render "devise/shared/links" %>

