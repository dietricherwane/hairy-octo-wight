<div class="page-header">
  <div class="icon">
      <span class="ico-arrow-right"></span>
  </div>
  <h1>Mot de passe<small>Recevoir un email de réinitialisation</small></h1>
</div>

<div class = "row-fluid">
  <%#= render 'layouts/flash_messages' %>
  <% if !resource.errors.empty? %>  
  <div class = "span12">
    <div class = "alert alert-error">         
      <ul>
      <% resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
  <% end %>
  <% if @success %> 
  <div class = "span12"> 
    <div class = "alert alert-success">         
      <% @success_messages.each do |msg| %>
        <%= msg %>
      <% end %>
    </div
  </div>
  <% end %>
     
<!------------------------------------------ Row-fluid ----------------------------------->	
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%#= devise_error_messages! %>
    <div class = "row-form">
      <div class = "span12">
        <div class = "input-append">		        
          <%= f.email_field :email, :autofocus => true, :placeholder => "Email" %>
          <span class="add-on blue">
            <i class = "icon-user icon-white"></i>
          </span>
        </div>
      </div>
    </div>
    <div class = "row-form">
      <div class="span12">
        <%= button_tag(:name => "Réinitialiser le mot de passe", :data => {:disable_with => "Veuillez patienter"}, :class => "btn") do %>
          Réinitialiser le mot de passe <div class="icon-arrow-next icon-white"></div> 
        <% end %>
      </div>
    </div>
<% end %>	
<!------------------------------------------ Row-fluid ----------------------------------->
</div>	  

<%= render "devise/shared/links" %>
